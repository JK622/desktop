; ===== Includes =====
!include "MUI2.nsh"

; ===== General =====
Name "${PROJECT_NAME} ${PROJECT_VERSION}"
OutFile "${PROJECT_NAME}-${PROJECT_VERSION}-installer.exe"
InstallDir "$PROGRAMFILES\${PROJECT_NAME}"
SetCompressor "lzma"

; ===== Pages =====
!insertmacro MUI_PAGE_WELCOME
!insertmacro MUI_PAGE_LICENSE "${CMAKE_CURRENT_SOURCE_DIR}\COPYING"
!insertmacro MUI_PAGE_DIRECTORY
!insertmacro MUI_PAGE_INSTFILES
!define MUI_FINISHPAGE_NOAUTOCLOSE
!define MUI_FINISHPAGE_RUN
!define MUI_FINISHPAGE_RUN_CHECKED
!define MUI_FINISHPAGE_RUN_TEXT "Run Application"
!define MUI_FINISHPAGE_RUN_FUNCTION "RunApplication"
!insertmacro MUI_PAGE_FINISH

!insertmacro MUI_UNPAGE_WELCOME
!insertmacro MUI_UNPAGE_CONFIRM
!insertmacro MUI_UNPAGE_INSTFILES
!insertmacro MUI_UNPAGE_FINISH

!insertmacro MUI_LANGUAGE "English"

; ===== Installer =====
Section ""
	SetOutPath $INSTDIR
	
	CreateDirectory $INSTDIR\platforms
	
	File ${CMAKE_CURRENT_BINARY_DIR}\trebleshot.exe
	File ${CMAKE_CURRENT_SOURCE_DIR}\COPYING
	File ${CMAKE_CURRENT_SOURCE_DIR}\assets\drawable\trebleshot.ico

	#
	File ${QT_BINARY_DIR}\Qt5Widgets${QT_LIBRARY_SUFFIX}
	File ${QT_BINARY_DIR}\Qt5Gui${QT_LIBRARY_SUFFIX}
	File ${QT_BINARY_DIR}\Qt5Core${QT_LIBRARY_SUFFIX}
	File ${QT_BINARY_DIR}\Qt5Sql${QT_LIBRARY_SUFFIX}
	File ${QT_BINARY_DIR}\Qt5Network${QT_LIBRARY_SUFFIX}
	
	SetOutPath $INSTDIR\platforms
	File ${QT_PLUGINS_DIR}\platforms\qminimal.dll
	File ${QT_PLUGINS_DIR}\platforms\qwindows.dll
	
	SetOutPath $INSTDIR
	WriteUninstaller $INSTDIR\uninstall.exe
	CreateShortCut "$SMPROGRAMS\${PROJECT_NAME}.lnk" "$INSTDIR\trebleshot.exe" "" "$INSTDIR\trebleshot.ico" 0
	WriteRegStr HKLM "Software\Microsoft\Windows\CurrentVersion\Uninstall\${PROJECT_NAME}" \
                 "DisplayName" "${PROJECT_NAME}"
	WriteRegStr HKLM "Software\Microsoft\Windows\CurrentVersion\Uninstall\${PROJECT_NAME}" \
                 "UninstallString" "$\"$INSTDIR\uninstall.exe$\""
	WriteRegStr HKLM "Software\Microsoft\Windows\CurrentVersion\Uninstall\${PROJECT_NAME}" \
                 "DisplayVersion" "${PROJECT_VERSION}"
	WriteRegStr HKLM "Software\Microsoft\Windows\CurrentVersion\Uninstall\${PROJECT_NAME}" \
                 "VersionMajor" "${PROJECT_VERSION_MAJOR}"
	WriteRegStr HKLM "Software\Microsoft\Windows\CurrentVersion\Uninstall\${PROJECT_NAME}" \
                 "VersionMinor" "${PROJECT_VERSION_MINOR}"
	WriteRegStr HKLM "Software\Microsoft\Windows\CurrentVersion\Uninstall\${PROJECT_NAME}" \
                 "Publisher" "${PROJECT_AUTHOR}"
SectionEnd

; ===== Uninstaller =====
Section "Uninstall"	
	Delete $INSTDIR\LICENSE
	Delete $INSTDIR\*.dll
	Delete $INSTDIR\platforms\*.dll
	Delete $INSTDIR\trebleshot.exe
	Delete $INSTDIR\uninstall.exe
	Delete $SMPROGRAMS\${PROJECT_NAME}.lnk
	RMDir $INSTDIR\platforms
	RMDir $INSTDIR
	DeleteRegKey HKLM "Software\Microsoft\Windows\CurrentVersion\Uninstall\${PROJECT_NAME}"
SectionEnd

; ===== Functions =====
Function RunApplication
	ExecShell "" "$INSTDIR\trebleshot.exe"
FunctionEnd